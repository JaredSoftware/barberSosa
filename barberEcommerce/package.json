{
  "name": "nuxt-app",
  "private": true,
  "scripts": {
    "css-build": "sass --no-source-map css/bulma/bulma.scss css/bulma/bulma.css",
    "build": "npm run css-build && nuxt generate && npm run copy-to-backend",
    "copy-to-backend": "mkdir -p ../barber-backend/public && rm -rf ../barber-backend/public/* && cp -r .output/public/* ../barber-backend/public/ 2>/dev/null || cp -r dist/* ../barber-backend/public/ 2>/dev/null || true",
    "generate": "npm run css-build && nuxt generate && npm run copy-to-backend",
    "dev": "npm run css-build && nuxt dev --host",
    "preview": "npm run css-build && nuxt preview",
    "postinstall": "npm run css-build && nuxt prepare",
    "optimize": "node optimize-image.js"
  },
  "devDependencies": {
    "@nuxt/devtools": "latest",
    "@nuxtjs/i18n": "^8.0.0",
    "@nuxtjs/tailwindcss": "^6.14.0",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/forms": "^0.5.11",
    "autoprefixer": "^10.4.23",
    "bulma": "^0.9.4",
    "imagemin": "^8.0.1",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^9.0.2",
    "nuxt": "^3.7.1",
    "postcss": "^8.5.6",
    "sass": "^1.97.3",
    "tailwindcss": "^3.4.19"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "date-fns": "^4.1.0"
  }
}
